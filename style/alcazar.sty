    bottom  = 2.5cm,
    inner   = 3.5cm,
    outer   = 2.5cm
} 
\setlength{\headheight}{13.6pt}

% Chapters

\fancypagestyle{chapters}
{
    \fancyhfoffset[RO,LE]{0cm}
    
    % \fancyhead[LE]{\sf\leftChapterNumber\small{\thepage}}  % uncomment to enable the side chapter numbers
    \fancyhead[LE]{\sf\small{\thepage}}  % uncomment to disable the side chapter numbers
    \fancyhead[RE]{\sf\small{\nouppercase{\leftmark}}}  
    \fancyhead[C]{}
    \fancyhead[LO]{\sf\small{\nouppercase{\rightmark}}}
    % \fancyhead[RO]{\sf\small{\thepage} \rightChapterNumber}  % uncomment to enable the side chapter numbers
    \fancyhead[RO]{\sf\small{\thepage}}   % uncomment to disable the side chapter numbers
    
